/* 글꼴 가져오기 */
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap');

/* 기본 스타일 초기화 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Noto Sans KR', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: #f5f5f5;
  color: #333;
  overflow-x: hidden; /* 가로 스크롤 방지 */
  width: 100%;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
    monospace;
}

/* 스크롤바 스타일 */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #555;
}

/* 앱 전체 스타일 */
#root {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  overflow-x: hidden; /* 가로 스크롤 방지 */
  width: 100%;
  max-width: 100%;
}

/* FHD (1920x1080) 이하 해상도에서 자동으로 70% 크기로 조정 */
@media screen and (max-width: 1920px) {
  html {
    zoom: 0.70 !important;
  }
  
  body {
    /* transform 대신 zoom만 사용하여 드롭다운 위치 문제 해결 */
    width: 100% !important;
    height: 100% !important;
  }
  
  /* 테이블에만 추가 zoom 적용 */
  .MuiTableContainer-root {
    zoom: 0.60 !important;
  }
}

/* 2K (2560x1440) 해상도에서는 90% 크기로 조정 */
@media screen and (min-width: 1921px) and (max-width: 2559px) {
  html {
    zoom: 0.70 !important;
  }
  
  body {
    /* transform 대신 zoom만 사용하여 드롭다운 위치 문제 해결 */
    width: 100% !important;
    height: 100% !important;
  }
  
  /* 테이블에만 추가 zoom 적용 - 전체 0.8 * 0.9 = 0.72 (약 72% 크기) */
  .MuiTableContainer-root {
    zoom: 0.9 !important;
  }
}

/* 4K (3840x2160) 이상 해상도에서는 원본 크기(100%) 유지 */
@media screen and (min-width: 2560px) {
  html {
    zoom: 1 !important;
  }
  
  body {
    width: 100% !important;
    height: 100% !important;
  }
  
  /* 큰 화면에서는 테이블도 100% 유지 */
  .MuiTableContainer-root {
    zoom: 1 !important;
  }
}

/* 페이지 컨테이너 스타일 */
.page-container {
  width: 100% !important;
  max-width: 100% !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

/* 유형 셀 스타일 - 칩 형태 */
.type-chip-agent1 .ag-cell-value,
.type-chip-agent2 .ag-cell-value,
.type-chip-agent3 .ag-cell-value,
.type-chip-agent4 .ag-cell-value,
.type-chip-member .ag-cell-value,
.type-chip-other .ag-cell-value {
  border-radius: 16px;
  padding: 4px 10px;
  font-size: 0.75rem;
  font-weight: 500;
  display: inline-block;
  margin: 0 auto;
  text-align: center;
}

/* 에이전트 1차 스타일 */
.type-chip-agent1 .ag-cell-value {
  background-color: #3699FF;
  color: white;
}

/* 에이전트 2차 스타일 */
.type-chip-agent2 .ag-cell-value {
  background-color: #0BB783;
  color: white;
}

/* 에이전트 3차 스타일 */
.type-chip-agent3 .ag-cell-value {
  background-color: #8950FC;
  color: white;
}

/* 기타 에이전트 스타일 */
.type-chip-agent4 .ag-cell-value {
  background-color: #F64E60;
  color: white;
}

/* 회원 스타일 */
.type-chip-member .ag-cell-value {
  background-color: #FFA800;
  color: white;
}

/* 기타 유형 스타일 */
.type-chip-other .ag-cell-value {
  background-color: #7E8299;
  color: white;
}

/* 들여쓰기 레벨에 따른 스타일 */
.indent-level-0 { padding-left: 0 !important; }
.indent-level-1 { padding-left: 16px !important; }
.indent-level-2 { padding-left: 32px !important; }
.indent-level-3 { padding-left: 48px !important; }
.indent-level-4 { padding-left: 64px !important; }

/* Material-UI Typography 중앙 정렬 스타일 */
.mui-style-k554ax-MuiTypography-root,
.mui-style-oc40gs-MuiTypography-root {
  text-align: center !important;
}

/* 테이블 셀 내의 모든 Typography 요소를 중앙 정렬 */
.MuiTableCell-root .MuiTypography-root {
  text-align: center !important;
}

/* 테이블 셀 자체도 중앙 정렬 */
.MuiTableCell-root {
  text-align: center !important;
}

/* MuiContainer 패딩 설정 */
@media (max-width: 700px) {
  .MuiContainer-root,
  .mui-style-cbqchq-MuiContainer-root,
  [class*="mui-style-"][class*="MuiContainer-root"],
  [class*="MuiContainer-root"] {
    padding-left: 10px !important;
    padding-right: 10px !important;
  }
}

@media (min-width: 701px) {
  .MuiContainer-root,
  .mui-style-cbqchq-MuiContainer-root,
  [class*="mui-style-"][class*="MuiContainer-root"],
  [class*="MuiContainer-root"] {
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
}

/* MuiPaper 패딩 설정 */
@media (max-width: 700px) {
  .MuiPaper-root,
  .mui-style-19lmqij-MuiPaper-root,
  [class*="mui-style-"][class*="MuiPaper-root"],
  [class*="MuiPaper-root"] {
    padding: 6px !important;
  }
}

/* 특정 페이지에서만 MuiGrid-item padding-top 제거 */
.no-grid-padding .MuiGrid-item,
.no-grid-padding .mui-style-zow5z4-MuiGrid-root > .MuiGrid-item,
.no-grid-padding [class*="mui-style-"][class*="MuiGrid-root"] > .MuiGrid-item {
  padding-top: 0 !important;
}
